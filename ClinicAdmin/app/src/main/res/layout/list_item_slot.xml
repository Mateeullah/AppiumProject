<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_slot_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_delete"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/item_slot_doctor_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_slot_delete"
        android:padding="4dp"
        android:hint="Dcotor Title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_slot_date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_slot_doctor_Name"
        android:layout_toLeftOf="@id/item_slot_delete"
        android:padding="4dp"
        android:hint="Date" />
</RelativeLayout>