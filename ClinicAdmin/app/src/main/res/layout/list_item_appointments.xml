<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/list_appointment_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/list_appointment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_appointment_checkBox"
        android:padding="4dp"
        tools:text="Appointment Title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/list_appointment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_appointment_title"
        android:layout_toLeftOf="@id/list_appointment_checkBox"
        android:padding="4dp"
        tools:text="Appointment Date" />
</RelativeLayout>