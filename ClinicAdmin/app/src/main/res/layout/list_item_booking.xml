<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/list_appointment_Time"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="54dp"
        android:padding="4dp"
        android:paddingLeft="5dp"
        tools:text="time" />


    <TextView
        android:id="@+id/list_appointment_Patient_Name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/list_appointment_Time"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Patient Title" />

    <TextView
        android:id="@+id/list_appointment_date"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_appointment_Patient_Name"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/list_appointment_checkBox"
        android:padding="4dp"
        tools:text="Appointment Date" />
    <Button
        android:id="@+id/approved_booking_btn"
        android:text="Accept"
        android:layout_below="@id/list_appointment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:background="@drawable/style_button"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/reject_booking_btn"
        android:text="Reject"
        android:layout_alignParentRight="true"
        android:layout_below="@id/list_appointment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:background="@drawable/style_button"
        android:layout_gravity="center"/>


</RelativeLayout>